@page "/"
@using BattleShip.Models
@using BattleShip.App.Components
@inject GameState GameState
@inject NavigationManager Navigation

<div class="container">
    <h1>Bataille Navale</h1>
    
    @if (GameState.GameId == null && !IsPlacingShips)
    {
        <div class="menu-buttons">
            <button class="btn btn-primary btn-lg" @onclick="StartPlacement">Jouer contre l'IA</button>
            <button class="btn btn-success btn-lg" @onclick="GoToMultiplayer">Mode Multijoueur</button>
        </div>
    }
    else if (IsPlacingShips)
    {
        <div class="placement-phase">
            <h2>Placez vos bateaux avant de commencer</h2>
            <ShipPlacementUI OnPlacementsConfirmed="OnShipsPlaced" />
            <button class="btn btn-secondary mt-3" @onclick="CancelPlacement">Annuler</button>
        </div>
    }
    else
    {
        <div class="status-bar">
            <p><strong>@GameState.Message</strong></p>
            <p>Coups reussis: <span class="badge bg-success">@GameState.HitCount / 13</span></p>
            @if (GameState.GameOver)
            {
                <div class="alert @(GameState.PlayerWon ? "alert-success" : "alert-danger")">
                    @(GameState.PlayerWon ? "VICTOIRE !" : "Defaite")
                </div>
                <button class="btn btn-primary" @onclick="StartGame">Nouvelle Partie</button>
            }
        </div>

        <div class="boards-container">
            <div class="board-section">
                <h3>Votre Grille</h3>
                <div class="board">
                    @for (int y = 0; y < Board.Size; y++)
                    {
                        @for (int x = 0; x < Board.Size; x++)
                        {
                            var cell = GameState.PlayerBoard![x, y];
                            var cellClass = "cell";
                            if (cell.HasShip && cell.IsHit) cellClass += " ship-hit";
                            else if (cell.HasShip) cellClass += " ship";
                            else if (cell.IsHit) cellClass += " miss";
                            
                            <div class="@cellClass">
                                @if (cell.HasShip && cell.IsHit)
                                {
                                    <span>X</span>
                                }
                                else if (cell.IsHit)
                                {
                                    <span>O</span>
                                }
                                else if (cell.HasShip)
                                {
                                    <span>@GetShipLetter(cell)</span>
                                }
                            </div>
                        }
                    }
                </div>
            </div>

            <div class="board-section">
                <h3>Grille Adverse</h3>
                <div class="board">
                    @for (int y = 0; y < Board.Size; y++)
                    {
                        @for (int x = 0; x < Board.Size; x++)
                        {
                            var cell = GameState.OpponentBoard![x, y];
                            var cellClass = "cell clickable";
                            
                            if (cell.IsHit && cell.HasShip) 
                                cellClass += " ship-hit";
                            else if (cell.IsHit) 
                                cellClass += " miss";
                            
                            var currentX = x;
                            var currentY = y;
                            
                            <div class="@cellClass" @onclick="() => Attack(currentX, currentY)">
                                @if (cell.IsHit && cell.HasShip)
                                {
                                    <img src="images/hit.png" alt="Touché" class="hit-icon" />
                                }
                                else if (cell.IsHit)
                                {
                                    <img src="images/miss.png" alt="Raté" class="miss-icon" />
                                }
                            </div>
                        }
                    }
                </div>
            </div>
        </div>

        @if (GameState.History.Count > 0)
        {
            <div class="history-section mt-4">
                <h3>Historique des coups</h3>
                <div class="history-list">
                    @foreach (var move in GameState.History.AsEnumerable().Reverse().Take(10))
                    {
                        <div class="history-item @(move.IsPlayer ? "player-move" : "ai-move")">
                            <span class="move-player">@(move.IsPlayer ? "Vous" : "IA")</span>
                            <span class="move-coords">(@move.X, @move.Y)</span>
                            <span class="move-result @(move.Hit ? "hit" : "miss")">
                                @(move.Hit ? "Touché !" : "Raté")
                            </span>
                            <span class="move-time">@move.Timestamp.ToLocalTime().ToString("HH:mm:ss")</span>
                        </div>
                    }
                </div>
            </div>
        }
    }
</div>

@code {
    private bool IsPlacingShips = false;
    private List<BattleShip.Models.ShipPlacement>? PlayerPlacements = null;

    private void StartPlacement()
    {
        IsPlacingShips = true;
    }

    private void CancelPlacement()
    {
        IsPlacingShips = false;
        PlayerPlacements = null;
    }

    private async Task OnShipsPlaced(List<BattleShip.Models.ShipPlacement> placements)
    {
        PlayerPlacements = placements;
        IsPlacingShips = false;
        await GameState.StartNewGameWithPlacements(placements);
        StateHasChanged();
    }

    private async Task StartGame()
    {
        await GameState.StartNewGame();
        StateHasChanged();
    }

    private async Task Attack(int x, int y)
    {
        if (GameState.GameOver) return;
        
        var cell = GameState.OpponentBoard![x, y];
        if (cell.IsHit) return;
        
        var success = await GameState.Attack(x, y);
        
        if (success && GameState.GameOver)
        {
            if (GameState.PlayerWon)
            {
                GameState.Message = "Vous avez gagne !";
            }
            else
            {
                GameState.Message = "Vous avez perdu";
            }
        }
        
        StateHasChanged();
    }
    
    private void GoToMultiplayer()
    {
        Navigation.NavigateTo("/multiplayer");
    }
    
    private string GetShipLetter(Cell cell)
    {
        // Afficher une lettre pour le bateau (optionnel, selon PDF)
        return "■";
    }
}
