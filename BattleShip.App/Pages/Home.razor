@page "/"
@inject NavigationManager Navigation

<div class="pirate-layout">
    <div class="sea-background">
        <svg class="ocean-waves" viewBox="0 0 2 1" preserveAspectRatio="none">
            <defs>
                <path id="wave-path" d="m0 1v-.5 q.5.5 1 0 t1 0 1 0 1 0 v.5z" />
            </defs>
            <g>
                <use href="#wave-path" y=".0" fill="#2d55aa" class="wave-layer" />
                <use href="#wave-path" y=".1" fill="#3461c1" class="wave-layer" />
                <use href="#wave-path" y=".2" fill="#4579e2" class="wave-layer" />
                <use href="#wave-path" y=".3" fill="#5a8ff5" class="wave-layer" />
                <use href="#wave-path" y=".4" fill="#6ba5ff" class="wave-layer" />
            </g>
        </svg>
    </div>
    <div class="fog-layer"></div>

    <div class="pirate-content">

        <div class="pirate-cards-container">
            <MenuCard Title="Contre l'IA"
                      Description="Affrontez le redoutable Capitaine Barbe-Noire dans un duel sans merci."
                      Icon="⚔️"
                      ButtonText="À L'ABORDAGE"
                      Features="@(new List<string> { "Partie Rapide", "Entraînement", "Mode Solo" })"
                      OnClick="GoToAIGame" />

            <MenuCard Title="Multijoueur"
                      Description="Défiez d'autres pirates sur les sept mers et prouvez votre valeur."
                      Icon="☠️"
                      ButtonText="LEVER L'ANCRE"
                      Features="@(new List<string> { "Duel en Ligne", "Classement", "Temps Réel" })"
                      OnClick="GoToMultiplayer" />
        </div>
    </div>

    <div class="sea-foreground">
        <svg class="ocean-waves" viewBox="0 0 2 1" preserveAspectRatio="none">
            <defs>
                <path id="wave-path-fg" d="m0 1v-.5 q.5.5 1 0 t1 0 1 0 1 0 v.5z" />
            </defs>
            <g>
                <use href="#wave-path-fg" y=".5" fill="#2d55aa" class="wave-layer" />
            </g>
        </svg>
    </div>
</div>

@code {
    private void GoToAIGame()
    {
        Navigation.NavigateTo("/ship");
    }
    
    private void GoToMultiplayer()
    {
        Navigation.NavigateTo("/multiplayer");
    }
}


