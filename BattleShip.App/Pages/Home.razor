@page "/"
@inject NavigationManager Navigation

<div class="ocean-background">
    <div class="menu-container">
        <div class="menu-card">
            <div class="card-header">
                <p class="subtitle">Choisissez votre mode de combat</p>
            </div>
            
            <div class="game-modes">
                <div class="mode-card ai-mode" @onclick="GoToAIGame">
                    <div class="mode-icon"></div>
                    <h2>Contre l'IA</h2>
                    <p>Affrontez l'intelligence artificielle</p>
                    <div class="mode-features">
                        <span>✓ Partie rapide</span>
                        <span>✓ Placement manuel</span>
                        <span>✓ Solo</span>
                    </div>
                    <button class="play-btn ai-btn">JOUER</button>
                </div>
                
                <div class="mode-card multiplayer-mode" @onclick="GoToMultiplayer">
                    <div class="mode-icon"></div>
                    <h2>Multijoueur</h2>
                    <p>Défiez un autre joueur en ligne</p>
                    <div class="mode-features">
                        <span>✓ Temps réel</span>
                        <span>✓ Matchmaking</span>
                        <span>✓ SignalR</span>
                    </div>
                    <button class="play-btn multiplayer-btn">JOUER</button>
                </div>
            </div>
            
            <div class="card-footer">
                <p>Préparez vos navires et que le meilleur gagne !</p>
            </div>
        </div>
    </div>
</div>

@code {
    private void GoToAIGame()
    {
        Navigation.NavigateTo("/ship");
    }
    
    private void GoToMultiplayer()
    {
        Navigation.NavigateTo("/multiplayer");
    }
}


